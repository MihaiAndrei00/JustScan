<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#73D4EE">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgRestauranteItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/nombreRestauranteItem"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/imgRestauranteItem"
            android:text="Nombre"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/calleRestauranteItem"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreRestauranteItem"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgRestauranteItem"
            android:text="Duracion"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipoDeComidaItem"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreRestauranteItem"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/imgRestauranteItem"
            android:text="Duracion"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/botonBorrarRestauranteAdmin"
            android:layout_width="53dp"
            android:layout_height="68dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/calleRestauranteItem"
            android:backgroundTint="#73D4EE"
            app:srcCompat="@android:drawable/ic_menu_delete"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>