<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verImagen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/descripcionRutaVista"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_input"
        android:drawableStart="?android:attr/actionModeFindDrawable"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloRutaVista" />

    <Button
        android:id="@+id/agregarRuta"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button2"
        android:text="Agregar Ruta"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duracionRutaVista"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/tituloRutaVista"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/duracionRutaVista"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_lock_idle_alarm"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Duración"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionRutaVista" />

</androidx.constraintlayout.widget.ConstraintLayout>