<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.controladores.ver.VerCalle">

    <TextView
        android:id="@+id/tituloCalleExtras"
        android:layout_width="221dp"
        android:layout_height="32dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcionCalleExtras"
        android:layout_width="345dp"
        android:layout_height="71dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verFotoCalleExtras" />

    <ImageView
        android:id="@+id/verFotoCalleExtras"
        android:layout_width="291dp"
        android:layout_height="241dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloCalleExtras"
        app:srcCompat="@drawable/logo" />

    <fragment
        android:id="@+id/menu"
        android:name="com.example.controladores.fragments.Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionCalleExtras"
        tools:layout="@layout/fragment_menu"
        tools:layout_editor_absoluteX="-16dp">

    </fragment>

</androidx.constraintlayout.widget.ConstraintLayout>