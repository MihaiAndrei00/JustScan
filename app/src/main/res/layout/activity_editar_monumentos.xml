<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.controladores.update.EditarMonumento">

    <EditText
        android:id="@+id/editarCalleMonumento"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:drawableStart="?android:attr/actionModeFindDrawable"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Calle"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarNombreDeMonumento" />

    <Button
        android:id="@+id/btnEditarMonumento"
        android:layout_width="174dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/custom_button2"
        android:text="Agregar Monumento"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editarNombreDeMonumento"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarImagenMonumento" />

    <EditText
        android:id="@+id/editarHistoriaMonumento"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_lock_idle_alarm"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Historia"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarCalleMonumento" />

    <EditText
        android:id="@+id/editarEt_latitudMonumento"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_lock_idle_alarm"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarHistoriaMonumento" />

    <EditText
        android:id="@+id/editarEt_LongitudMonumento"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@android:drawable/ic_lock_idle_alarm"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarEt_latitudMonumento" />

    <ImageView
        android:id="@+id/editarImagenMonumento"
        android:layout_width="262dp"
        android:layout_height="216dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo_boton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>