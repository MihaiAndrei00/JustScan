<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.controladores.ver.VerMonumento">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollDescripcionMonumento"
        android:layout_width="287dp"
        android:layout_height="224dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verFotoMonumentoExtras">

        <TextView
            android:id="@+id/tvDescripcionMonumentoExtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:text="TextView"
            android:textColor="#fff"
            app:layout_constraintBottom_toTopOf="@+id/adView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verFotoMonumentoExtras"
            app:layout_constraintVertical_bias="0.09" />
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/verFotoMonumentoExtras"
        android:layout_width="413dp"
        android:layout_height="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="241dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/verFotoMonumentoExtras"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/verFotoMonumentoExtras"
        app:layout_constraintTop_toTopOf="@+id/verFotoMonumentoExtras"
        app:srcCompat="@drawable/black_gradient" />


    <TextView
        android:id="@+id/nombreMonumentoExtras"
        android:layout_width="273dp"
        android:layout_height="36dp"
        android:layout_marginBottom="68dp"
        android:text="Neptuno"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/verFotoMonumentoExtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCalleMonumentoExtras"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:text="Localizacion: Plaza de Neptuno"
        android:textColor="#fff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/verFotoMonumentoExtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreMonumentoExtras"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAnimationMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#2761BA"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="#2761BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPanoramicoMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_panorama_24"
        android:visibility="invisible"
        app:backgroundTint="#2761BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNavegarMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_navigation_24"
        android:visibility="invisible"
        app:backgroundTint="#2761BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mostrarEnGoogleMapsMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_map_24"
        android:visibility="invisible"
        app:backgroundTint="#2761BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mostrarEnMapaMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:visibility="invisible"
        app:backgroundTint="#2761BA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/borrarMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#A81B1B"
        android:src="@drawable/ic_baseline_delete_24"
        app:backgroundTint="#A81B1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/EditarMonumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#EFD916"
        android:src="@drawable/ic_baseline_edit_24"
        app:backgroundTint="#EFD916"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollDescripcionMonumento" />

</androidx.constraintlayout.widget.ConstraintLayout>